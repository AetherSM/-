<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ComplaintMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.pojo.entity.Complaint">
        <id column="complaint_id" property="complaintId"/>
        <result column="order_id" property="orderId"/>
        <result column="order_type" property="orderType"/>
        <result column="complainant_id" property="complainantId"/>
        <result column="reason" property="reason"/>
        <result column="status" property="status"/>
        <result column="result" property="result"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="complaintId">
        insert into complaints(order_id, order_type, complainant_id, reason, status, create_time, update_time)
        values(#{orderId}, #{orderType}, #{complainantId}, #{reason}, 0, now(), now())
    </insert>

    <update id="update">
        update complaints
        set status = #{status}, result = #{result}, update_time = now()
        where complaint_id = #{complaintId}
    </update>

    <select id="findById" resultMap="BaseResultMap">
        select * from complaints where complaint_id = #{complaintId}
    </select>

    <select id="listByUser" resultMap="BaseResultMap">
        select * from complaints where complainant_id = #{userId} order by create_time desc
    </select>
</mapper>
