<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.CouponMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.pojo.entity.Coupon">
        <id column="coupon_id" property="couponId"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="value" property="value"/>
        <result column="min_spend" property="minSpend"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="couponId">
        insert into coupons(name, type, value, min_spend, start_time, end_time, status, create_time, update_time)
        values(#{name}, #{type}, #{value}, #{minSpend}, #{startTime}, #{endTime}, #{status}, now(), now())
    </insert>

    <update id="update">
        update coupons set name=#{name}, type=#{type}, value=#{value}, min_spend=#{minSpend}, 
        start_time=#{startTime}, end_time=#{endTime}, status=#{status}, update_time=now()
        where coupon_id=#{couponId}
    </update>

    <select id="findById" resultMap="BaseResultMap">
        select * from coupons where coupon_id = #{couponId}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        select * from coupons
    </select>
</mapper>
