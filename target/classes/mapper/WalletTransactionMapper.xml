<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.WalletTransactionMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.pojo.entity.WalletTransaction">
        <id column="transaction_id" property="transactionId"/>
        <result column="user_id" property="userId"/>
        <result column="transaction_type" property="transactionType"/>
        <result column="amount" property="amount"/>
        <result column="balance_before" property="balanceBefore"/>
        <result column="balance_after" property="balanceAfter"/>
        <result column="related_order_no" property="relatedOrderNo"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="transactionId" keyColumn="transaction_id">
        insert into wallet_transactions(user_id, transaction_type, amount, balance_before, balance_after, related_order_no, description, create_time)
        values(#{userId}, #{transactionType}, #{amount}, #{balanceBefore}, #{balanceAfter}, #{relatedOrderNo}, #{description}, now())
    </insert>

    <select id="listByUser" resultMap="BaseResultMap">
        select * from wallet_transactions where user_id = #{userId} order by create_time desc
    </select>

</mapper>
