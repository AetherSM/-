<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ShoppingRecordMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.pojo.entity.ShoppingRecord">
        <id column="record_id" property="recordId"/>
        <result column="user_id" property="userId"/>
        <result column="order_no" property="orderNo"/>
        <result column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="product_image" property="productImage"/>
        <result column="price" property="price"/>
        <result column="quantity" property="quantity"/>
        <result column="subtotal" property="subtotal"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="batchInsert">
        insert into shopping_records(user_id, order_no, product_id, product_name, product_image, price, quantity, subtotal, created_at)
        values
        <foreach collection="records" item="r" separator=",">
            (#{r.userId}, #{r.orderNo}, #{r.productId}, #{r.productName}, #{r.productImage}, #{r.price}, #{r.quantity}, #{r.subtotal}, now())
        </foreach>
    </insert>

    <select id="listByUser" resultMap="BaseResultMap">
        select * from shopping_records where user_id = #{userId} order by created_at desc
    </select>

    <delete id="deleteByIdAndUser">
        delete from shopping_records where record_id = #{recordId} and user_id = #{userId}
    </delete>

</mapper>
