<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.WantedPostMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.pojo.entity.WantedPost">
        <id column="post_id" property="postId"/>
        <result column="user_id" property="userId"/>
        <result column="title" property="title"/>
        <result column="description" property="description"/>
        <result column="price_range" property="priceRange"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="postId">
        insert into wanted_posts(user_id, title, description, price_range, status, create_time, update_time)
        values(#{userId}, #{title}, #{description}, #{priceRange}, 1, now(), now())
    </insert>

    <update id="update">
        update wanted_posts
        set title = #{title}, description = #{description}, price_range = #{priceRange}, 
            status = #{status}, update_time = now()
        where post_id = #{postId}
    </update>

    <select id="findById" resultMap="BaseResultMap">
        select * from wanted_posts where post_id = #{postId}
    </select>

    <select id="list" resultMap="BaseResultMap">
        select * from wanted_posts
        <where>
            <if test="status != null">
                status = #{status}
            </if>
        </where>
        order by create_time desc
    </select>
</mapper>
