<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ReviewReplyMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.pojo.entity.ReviewReply">
        <id column="reply_id" property="replyId"/>
        <result column="review_id" property="reviewId"/>
        <result column="replier_id" property="replierId"/>
        <result column="replier_nickname" property="replierNickname"/>
        <result column="content" property="content"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="replyId" keyColumn="reply_id">
        insert into review_replies(review_id, replier_id, content, create_time)
        values(#{reviewId}, #{replierId}, #{content}, now())
    </insert>

    <select id="listByReview" resultMap="BaseResultMap">
        select rr.*, u.nickname as replier_nickname
        from review_replies rr
        left join users u on rr.replier_id = u.user_id
        where rr.review_id = #{reviewId}
        order by rr.create_time asc
    </select>

</mapper>
